import yfinance as yf

print("Input your stocks here, by their stock tickers under which they are listed. Then the program will find their covariance and correlation based on data starting from 2020.01.01")
ticker1 = input("Enter first symbol: ").upper()
ticker2 = input("Enter second symbol: ").upper()

from datetime import date
today = date.today()

data = download = yf.download([ticker1, ticker2], start="2020-01-01", end=today)
prices = data["Close"]
returns = prices.pct_change().dropna()
cov_matrix = returns.cov()
cov_ab = cov_matrix.loc[ticker1, ticker2]
corr_matrix = returns.corr()
corr_ab = corr_matrix.loc[ticker1, ticker2]

print("Here are the results:")
print("The covariance between ${} and ${} is {}".format(ticker1, ticker2, round(cov_ab, 5)))
print("The correlation between ${} and ${} is {}".format(ticker1, ticker2, round(corr_ab, 5)))
